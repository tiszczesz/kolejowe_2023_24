<h1>Zapraszam na ...</h1>
<form method="post">
    <div class="row m-2">
        <label asp-for="@Model.MyPerson.Pseudo" class="col-3"></label>
        <input asp-for="@Model.MyPerson.Pseudo" class="col-6"/>
