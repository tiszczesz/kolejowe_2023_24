@model List<Car>

<h1>Lista samochodów</h1>
<div >
    <a class="btn btn-primary" asp-action="Insert">Dodaj nowy samochód</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Lp</th>
            <th>Model</th>
            <th>Rok produkcji</th>
            <th >Cena</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int lp = 0;}
        @foreach(var c in Model){
            lp++;
            <tr>
                <td>@lp</td>
                <td>@c.Model</td>
                <td>@c.Year</td>
                <td class="text-end">@c.Price</td>
                <td></td>
            </tr>
        }
        
    </tbody>
</table>