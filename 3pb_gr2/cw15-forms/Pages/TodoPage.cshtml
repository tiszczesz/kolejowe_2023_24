@page
@model cw15_forms.Pages.TodoPageModel
@{
}
<h1>Zadanie do zrobienia</h1>
<form method="post">
    <div class="row m-2">
        <label asp-for="@Model.MyTodo.Title" class="col-3"></label>
        <input asp-for="@Model.MyTodo.Title" class="col-6"/>
        <span asp-validation-for="@Model.MyTodo.Title" class="col-3 error"></span>
    </div>
    <div class="row m-2">
        <label asp-for="@Model.MyTodo.Content" class="col-3"></label>
        <textarea asp-for="@Model.MyTodo.Content" class="col-6"></textarea>
        <span asp-validation-for="@Model.MyTodo.Content" class="col-3 error"></span>
    </div>
    <div class="row m-2">
        <label asp-for="@Model.MyTodo.DateOf" class="col-3"></label>
        <input asp-for="@Model.MyTodo.DateOf" class="col-6" />
        <span asp-validation-for="@Model.MyTodo.DateOf" class="col-3 error"></span>
    </div>
    <div class="row m-2">
        <input type="submit" class="col-6 offset-3 btn btn-outline-dark" value="Zapisz"/>
    </div>

</form>